@model List<Product>
<div class="container">
		<div class="row pt-4">
			<div class="col-6">
				<h2 class="text-primary">
					Product List
				</h2>
			</div>
			<div class="col-6 text-end">
				<a asp-controller="Product" asp-action="Create" class="btn btn-primary">
					<i class="bi bi-plus-circle"></i> Create New Product
				</a>
			</div>
		</div>
    <table class="table table-striped-columns">
        <thead>
            <tr>
                <th scope="col">id</th>
                <th scope="col">Description</th>
                <th scope="col">List Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var a in Model)
            {

                <tr>
                    <td>@a.Id</td>
                    <td>@a.Description</td>
                    <td>@a.ListPrice</td>
                    <td>
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@a.Id" class="btn btn-primary">Edit</a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@a.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>