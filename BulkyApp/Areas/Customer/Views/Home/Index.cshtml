@model List<Product>
<!-- banner section -->
<section style="background-color: black;">
    <div class="container">
        <div class="row justify-content-center">
                <div class="position-relative">
                    <img src="~/images/Home/IMG_3364(2).png" class="img-fluid fit-image-to-window easeload" onload="this.style.opacity=1">
                    <button type="button" class="btn btn-primary position-absolute top-50 start-50 translate-middle">Shop Now</button>
                </div>
        </div>
    </div>
</section>

<div class="container-fluid py-5">
    <div class="row">
        <div class="col-md-6 p-4 position-relative" >
            <a href="#"><img src="~/images/Home/Ayylien-Banner-Square-Hats_acfd8784-f067-43ab-a9ea-ee9b3f13a19b_300x300.webp" class="w-100 vh-75" alt="Your Image 1"></a>
            <button type="button" class="rounded-pill btn btn-primary position-absolute top-85 start-50 translate-middle">Check it out</button>     
        </div>
        <div class="col-md-6 p-4 position-relative">
            <a href="#"><img src="~/images/Home/Ayylien-Banner-Square-Hats_acfd8784-f067-43ab-a9ea-ee9b3f13a19b_720x.webp" class="w-100 vh-75" alt="Your Image 2"></a>
            <button type="button" class="rounded-pill btn btn-primary position-absolute top-85 start-50 translate-middle">Check it out</button>
        </div>
    </div>
</div>

<h1 class="h1 px-4">Featured Products</h1>

<div class="container-fluid ms-1">
    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4 p-4 h-100">
        @foreach(var product in Model){
        <div class="col-md-6 col-lg-3 position-relative">
            <div class="animated-card card">
                <a asp-action="Details" asp-route-productId="@product.Id">
                    @if(product.ProductImages != null && product.ProductImages.Count() > 0)
                    {
                        <img src=@product.ProductImages.FirstOrDefault().ImageUrl alt="Card Back" class="image-bottom w-100 vh-50">
                        if (product.ProductImages.Count() > 1)
                        {
                        <img src=@product.ProductImages.Skip(1).FirstOrDefault().ImageUrl alt="Card Front" class="image-top w-100 vh-50">
                        }
                    }
                    else{
                        <img src="https://placehold.co/600x400" alt="Card Back" class="image-bottom w-100 vh-50">
                    }
                </a>
                    <button type="button" asp-action="Details" asp-route-productId="@product.Id" class="button-top rounded-pill btn btn-primary position-absolute top-85 start-50 translate-middle">View now</button>
            </div>
                <a asp-action="Details" asp-route-productId="@product.Id">@product.Description</a>
            <p>@product.ListPrice.ToString("c")</p>
        </div>
        }
    </div>
</div>
