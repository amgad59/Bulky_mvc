@page
@model BulkyRazorWeb_Temp.Pages.Categories.IndexModel

<div class="container">
		<div class="row pt-4">
			<div class="col-6">
				<h2 class="text-primary">
					Category List
				</h2>
			</div>
			<div class="col-6 text-end">
			<a asp-page="/categories/create" class="btn btn-primary">
					<i class="bi bi-plus-circle"></i> Create New Category
				</a>
			</div>
		</div>
<table class="table table-bordered table-striped"> 
	<thead>
	<tr>
		<th>
			Name
		</th>
		<th>
			display order
		</th>
	</tr>
	</thead>
	<tbody>
		@foreach(var a in Model.CategoryList.OrderBy(o=>o.Name))
		{
		<tr>
			<td>@a.Name</td>
			<td>@a.DisplayOrder</td>	
			<td>
				<div class="w-75 btn-group" role="group">
							<a asp-page="/categories/Edit" asp-route-id="@a.Id" class="btn btn-primary mx-2">
						<i class="bi bi-pencil-square"></i> Edit 
					</a>

					<a asp-page="/categories/Delete" asp-route-id="@a.Id" class="btn btn-danger mx-2">
								<i class="bi bi-trash"></i> Delete
					</a>

				</div>
			</td>
		</tr>
		}
	</tbody>
</table>
</div>