@using Empire.Models.ViewModels;
@model RoleManagementVM

<form method="post">
	<input asp-for="@Model.ApplicationUser.Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Manage user role</h2>
			<hr />
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="@Model.ApplicationUser.Name" class="p-0">Name</label>
			<input asp-for="@Model.ApplicationUser.Name" readonly class="form-control" />
		</div>
		<div class="form-floating py-2 col-12">
			<select asp-for="ApplicationUser.role" asp-items="@Model.RoleList" class="form-select">

			</select>
		</div>@*<div asp-validation-summary="ModelOnly"></div> *@
		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary form-control">Update Role</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-action="Index" class="btn btn-secondary border form-control">Back to List</a>
			</div>
		</div>
	</div>
</form>
@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}